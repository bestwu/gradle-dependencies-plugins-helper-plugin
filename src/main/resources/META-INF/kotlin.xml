<idea-plugin>
  <extensions defaultExtensionNs="com.intellij">
    <completion.contributor language="kotlin"
      implementationClass="cn.bestwu.gdph.kotlin.GradleKtsDependenciesCompletionContributor"
      order="first"/>
    <completion.contributor language="kotlin"
      implementationClass="cn.bestwu.gdph.kotlin.GradleKtsPluginsCompletionContributor"
      order="first"/>

    <documentationProvider implementation="cn.bestwu.gdph.kotlin.KtsOpenJcenterOrMavenCentralProvider"
      order="first"/>

    <intentionAction>
      <category>Gradle</category>
      <className>cn.bestwu.gdph.kotlin.AddKtsMethodNotationRepositoriesIntention</className>
    </intentionAction>
  </extensions>
</idea-plugin>
