<idea-plugin version="2">
  <id>GradleDependenciesAndPluginsHelper</id>
  <name>Gradle Dependencies And Plugins Helper</name>
  <version>0.0.2</version>
  <vendor email="piterwu@outlook.com"
    url="https://github.com/bestwu/gradle-dependencies-plugins-helper-plugin">piterwu
  </vendor>
  <depends>org.jetbrains.idea.maven</depends>
  <depends>org.jetbrains.plugins.gradle</depends>
  <depends>org.intellij.groovy</depends>
  <depends>org.jetbrains.kotlin</depends>

  <description><![CDATA[
      This is an IntelliJ IDEA plugin for searching dependencies/plugins from JCentral/GradlePlugins inside Gradle projects.<br/><br/>

      <b>Features</b>
      <ul>
        <li>Support *.gradle,*.gradle.kts.</li>
        <li>Use jcenter API for Gradle queries.</li>
        <li>Use Gradle Plugins Search for Gradle Plugins queries.</li>
        <li>Support wildcard query *,? etc.</li>
        <li>Support search by classname in mavenCentral search.</li>
        <li>Support Maven Index search option and Nexus search option.</li>
      </ul><br/><br/>
        <b>Donate:</b><br/>
  <table>
    <tr>
      <td>alipay</td>
      <td>weixinpay</td>
    </tr>
    <tr>
      <td><img width="175" height="175"
               src="https://github.com/bestwu/gradle-dependencies-plugins-helper-plugin/blob/master/donate/alipay.png?raw=true"/>
      </td>
      <td><img width="175" height="175"
               src="https://github.com/bestwu/gradle-dependencies-plugins-helper-plugin/blob/master/donate/wechatpay.png?raw=true"/>
      </td>
    </tr>
  </table>
      ]]></description>

  <change-notes><![CDATA[
  <ul>
   <b>0.0.2</b><br/><br/>
   <li>Add Maven Index search option.</li>
   <li>Add Nexus search option.</li>
   <li>Support search by classname in mavenCentral search.<br/>
   use "c:"(classname) or "fc:"( fully-qualified classname ) in dependencies script block<br/>
   example: <br/>
   &nbsp; &nbsp; compile("fc:org.junit.Test")<br/>
   &nbsp; &nbsp; compile("c:Junit")<br/>
   <br/><b>0.0.1</b><br/><br/>
   <li>Support *.gradle,*.gradle.kts.</li>
   <li>Use jcenter API for Gradle queries.</li>
   <li>Use Gradle Plugins Search for Gradle Plugins queries.</li>
   <li>Support wildcard query *,? etc.</li>
    
  </ul>
      ]]>
  </change-notes>

  <idea-version since-build="145.258.11"/>

  <extensions defaultExtensionNs="com.intellij">
    <postStartupActivity
      implementation="cn.bestwu.gdph.GradleProjectStartupActivity"/>
    <externalSystemTaskNotificationListener
      implementation="cn.bestwu.gdph.GradleMavenProjectImportNotificationListener"/>

    <completion.contributor language="Groovy"
      implementationClass="cn.bestwu.gdph.GradleDependenciesCompletionContributor"
      order="first"/>
    <completion.contributor language="kotlin"
      implementationClass="cn.bestwu.gdph.GradleKtsDependenciesCompletionContributor"
      order="first"/>
    <completion.contributor language="Groovy"
      implementationClass="cn.bestwu.gdph.GradlePluginsCompletionContributor"
      order="first"/>
    <completion.contributor language="kotlin"
      implementationClass="cn.bestwu.gdph.GradlePluginsCompletionContributor"
      order="first"/>

    <documentationProvider
      implementation="cn.bestwu.gdph.OpenJcenterOrMavenCentralProvider"
      order="first"/>

    <projectConfigurable
      instance="cn.bestwu.gdph.config.GDPHConfigurable"/>
    <projectService
      serviceInterface="cn.bestwu.gdph.config.Settings"
      serviceImplementation="cn.bestwu.gdph.config.Settings"/>

  </extensions>

</idea-plugin>
